      <%= button_to "Apply", job_job_applications_path(job_id: job.id), :method => 'post',  :class => "button", :role => "button"  %>
  <% elsif applied_to_this_job(job) %>   
      <%= button_to "Applied âœ“", "/", :class => "button", :role => "button"  %>
