<div id="jobs">
<h1>Job Applications</h1>
<%= link_to 'New Job Application', new_job_application_path %>
<br>
<br>
    <% @job_applications.each do |job_application| %>
    <div class="jobContainer">
    <div id="img">
        <% if job_application.images_url %>
    <%= image_tag job_application.images_url(:thumb) %>
    <% end %> 
    </div>
    <p><%= job_application.country %></p>
        <h1><%= job_application.title %></h1>
         <p> <%= job_application.category %></p>
         <p> <%= job_application.description %></p>
        <br>
        <br>
        <hr>
        <div id="jobOption">
        <%= link_to 'Show', job_application %>
        <%= link_to 'Edit', edit_job_application_path(job_application) %>
        <%= link_to 'Destroy', job_application, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    </div>
    <% end %>
<br>
</div>