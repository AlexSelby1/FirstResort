<%= form_with(model: job_application, local: true) do |form| %>
  <% if job_application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job_application.errors.count, "error") %> prohibited this job_application from being saved:</h2>

      <ul>
        <% job_application.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.text_field :country %>
  </div>

  <div class="field">
   <%= form.select :category, ['None','Barperson', 'Waiter/Waitress', 'Chef', 'Barista', 'Other'] %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  
  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>
<br>
        <%= form.file_field :images %>
    <% if form.object.images? %>
      <%= image_tag form.object.images.thumb.url %>
      <%= form.label "Remove Image" %>
      <%= form.check_box :remove_images %> 
    <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
