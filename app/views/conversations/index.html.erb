<div class = "conversation">
<h3>Conversations</h3>
<table id="conversations">
  <thead>
    <tr>
    <th>User</th>
        </tr>
  </thead>

  <tbody>
    <% @conversations.each do |conversation| %>
    <tr>
      <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
          <% recipient = User.find(conversation.recipient_id) %>
        <% else %>
          <% recipient = User.find(conversation.sender_id) %>
        <% end %>
        <% unless current_user.id == recipient %>
      <td> <% if recipient.images_url %>
         <%= image_tag recipient.images_url(:icon) %>
      <% else %>
          <%= image_tag("/assets/blank-profile-picture.png", alt:"ProfilePic", style: 'height:50px;width:50px;') %> 
           <% end %></td>
             <td> <%= link_to recipient.name, conversation_messages_path(conversation) %></td>
        <% end %>
      <% end %>
    <% end %>
      </tbody>
</table>
    </div>