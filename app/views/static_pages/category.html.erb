<div id="jobs">
<% if @job_applications.length == 0 %>
<br/>
<h2>There are currently no jobs in this category</h2>
<% end %>
<br>
<%= link_to 'New Job Application', new_job_application_path %>
<br>
<br>
    <% @job_applications.each do |job_application| %>
    <div class="jobContainer">
    <div id="img">
        <% if job_application.images_url %>
    <%= link_to (image_tag job_application.images_url(:thumb)), job_application %>
    <% end %> 
    </div>
    <p class="text"><%= job_application.category %></p>
        <h1><%= link_to (job_application.title), job_application %></h1>
         <p> <%= job_application.description %></p>
         <p class="text"> <%= job_application.country %></p>
        <br>
        <br>      
        <div id="jobOption">   
        <%= link_to 'Edit', edit_job_application_path(job_application) %>
        <%= link_to 'Delete', job_application, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Contact', "/" %>
        <%= link_to 'Apply', "/" %>
  </div>
    </div>
    <% end %>
    <%= paginate @job_applications %>
</div>