<div id="jobs">
<% if @jobs.length == 0 %>
<br>
<h2>No Jobs were found to match your search</h2>
<% end %>
<%=render 'layouts/search'%>
<%=render 'layouts/categories'%>
    <% @jobs.each do |job| %>
    <div class="jobContainer">
    <div id="img">
        <% if job.images_url %>
    <%= link_to (image_tag job.images_url(:thumb)), job %>
    <% else %>
    <%= image_tag("/assets/imgholder.jpg", alt:"Image placeholder", style: 'height:200px;width:200px;') %>
    <% end %>  
    </div>
    <p class="text"><%= job.category %></p>
        <h1><%= link_to (job.title), job %></h1>
         <p> <%= job.description %></p>
         <p class="text"> <%= job.country %></p>
        <br>
        <br>      
        <div id="jobOption">   
        <% if ((user_is_admin) || (user_is_candidate)) %>
        <%= link_to 'Contact', "/",  :class => "button", :role => "button"  %>
        <%= link_to 'Apply', "/",  :class => "button", :role => "button"  %>
        <% end %>
  </div>
    </div>
    <% end %>
    <%= paginate @jobs %>
</div>